<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_view_custom_row_reviewer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Reviewer"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_view_custom_row_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/gray"
        android:textStyle="normal"
        android:textSize="16sp"
        android:text="date"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/text_view_custom_row_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/gray"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Category"/>

    <TextView
        android:id="@+id/text_view_custom_row_nominee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Nominee"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_view_custom_row_reviewer"/>
    <TextView
        android:id="@+id/text_view_custom_row_review"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Review"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_view_custom_row_reviewer"/>
</RelativeLayout>